#
# maintainer: Lane Wiscombe anex[at]dem0n[dot]com

pkgname=('lucid-hotfixes')
pkgver=2014.07
pkgrel=1
pkgdesc="Lucid Linux Hotfixes"
arch=('any')
url="http://www.cupoflinux.com/"
license=('GPL')
groups=('base')
source=('org.freedesktop.NetworkManager.Lucid.conf' '99-lucid.rules')
sha256sums=('d3bda2f77205742445580c6dab2490744a4b779daef149c9ac15726cdf211e11'
            'd28d6ecaf7682860e2b3768bb266bd94313546b7cd0ef3c2eace7b1576c47adb')

package() {
  cd ${pkgdir}

  # fix nm-applet
  install -d etc/dbus-1/system.d/
  install -D -m644 ${srcdir}/org.freedesktop.NetworkManager.Lucid.conf etc/dbus-1/system.d/

  # enable power management and mount external partitions password-less
  install -d -m700 etc/polkit-1/rules.d/
  install -D -m644 ${srcdir}/99-lucid.rules etc/polkit-1/rules.d/
  chown 102 etc/polkit-1/rules.d
}
