pkgname=('linux316' 'linux316-headers')
_kernelname=-LUCID
_basekernel=3.16
_basever=316
_aufs=20140721
_bfq=v7r5
_rc=rc6
pkgver=${_basekernel}${_rc}
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
source=("https://www.kernel.org/pub/linux/kernel/v3.x/testing/linux-${_basekernel}-${_rc}.tar.xz"
        #"http://www.kernel.org/pub/linux/kernel/v3.x/patch-${pkgver}.xz"
        # the main kernel config files
        'config' 'config.x86_64' 'config.aufs'
        # standard config files for mkinitcpio ramdisk
        "${pkgname}.preset"
        "aufs3.x-rcN-${_aufs}.patch.bz2"
        'aufs3-base.patch'
        'aufs3-kbuild.patch'
        'aufs3-loopback.patch'
        'aufs3-mmap.patch'
        'aufs3-standalone.patch'
        'tmpfs-ibitmap.patch'
        'vfs-ino.patch'
        'http://sources.gentoo.org/cgi-bin/viewvc.cgi/linux-patches/genpatches-2.6/trunk/3.15/1700_enable-thinkpad-micled.patch'
        'http://sources.gentoo.org/cgi-bin/viewvc.cgi/linux-patches/genpatches-2.6/trunk/3.15/2700_ThinkPad-30-brightness-control-fix.patch'
        "0001-block-cgroups-kconfig-build-bits-for-BFQ-${_bfq}.patch::https://groups.google.com/group/bfq-iosched/attach/fb5fa83ab69cbf31/0001-block-cgroups-kconfig-build-bits-for-BFQ-v7r5-3.16-rc1.patch?part=0.1"
        "0002-block-introduce-the-BFQ-${_bfq}-I-O-sched.patch::https://groups.google.com/group/bfq-iosched/attach/fb5fa83ab69cbf31/0002-block-introduce-the-BFQ-v7r5-I-O-sched-for-3.16-rc1.patch?part=0.2"
        "0003-block-bfq-add-Early-Queue-Merge-EQM-to-BFQ-${_bfq}.patch::https://groups.google.com/group/bfq-iosched/attach/fb5fa83ab69cbf31/0002-block-introduce-the-BFQ-v7r5-I-O-sched-for-3.16-rc1.patch?part=0.3"
)
