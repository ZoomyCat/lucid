# Maintainer: Lane Wiscombe anex[at]dem0n[dot]com

pkgbase=linux-meta

pkgname=('linux'
         'linux-headers'
         'bbswitch'
         'broadcom-wl'
         'catalyst'
         'catalyst-legacy'
         'cdfs'
         'fcpci'
         'fcpcmcia'
         'lirc'
         'ndiswrapper'
         'nvidia'
         'nvidia-legacy'
         'nvidiabl'
         'open-vm-tools-modules'
         'r8168'
         'rt3562sta'
         'slmodem'
         'spl'
         'tp_smapi'
         'vhba-module'
         'virtualbox-host-modules'
         'virtualbox-guest-modules'
         'zfs')

groups=('base')
pkgver=2013.04
pkgrel=1
arch=any
url="www.cupoflinux.com/"
license=('GPL')
linuxprefix="linux37"


package_linux() {
          pkgdesc="Lucid Stable Linux Kernel and modules (Meta-PKG)"
          depends="$linuxprefix"
          groups=('base')
          mkdir -p $pkgdir/etc/mkinitcpio.d
          ln -sf $linuxprefix.preset $pkgdir/etc/mkinitcpio.d/linux.preset
}

package_linux-headers() {
          pkgdesc="Lucid Stable Linux Kernel headers (Meta-PKG)"
          depends="$linuxprefix-headers"
}

