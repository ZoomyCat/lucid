# Maintainer: anex[at]dem0n[dot]com

pkgname=lucid-release
pkgver=0.0.1
pkgrel=1
pkgdesc="Lucid's release definition"
arch=("any")
url="http://www.cupoflinux.com/"
license=('GPL2')
depends=('lsb-release')
source=('lsb-release')
install="lucid-release.install"
sha256sums=('SKIP')

package() {
    # Copy files
    mkdir -p ${pkgdir}/etc
    install -m644 ${srcdir}/lsb-release ${pkgdir}/etc/

}
