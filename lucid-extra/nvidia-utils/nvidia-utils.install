err() {
    ALL_OFF="\e[1;0m"
    BOLD="\e[1;1m"
    RED="${BOLD}\e[1;31m"
	local mesg=$1; shift
	printf "${RED}==>${ALL_OFF}${BOLD} ${mesg}${ALL_OFF}\n" "$@" >&2
}

msg() {
    ALL_OFF="\e[1;0m"
    BOLD="\e[1;1m"
    GREEN="${BOLD}\e[1;32m"
	local mesg=$1; shift
	printf "${GREEN}==>${ALL_OFF}${BOLD} ${mesg}${ALL_OFF}\n" "$@" >&2
}



post_install() {
	mhwd-gpu --check

	msg "use mhwd-gpu to set nvidia as default: 'mhwd-gpu --setgl nvidia'"
}


post_upgrade() {
	if [ "$(mhwd -li | grep nvidia)" != "" ] && [ "$(mhwd -li | grep hybrid)" == "" ] ; then
		msg "Fixing nvidia settings ..."
		mhwd-gpu --setgl nvidia
	fi
	if [ "$(mhwd -li | grep hybrid)" != "" ]; then
		msg "Fixing hybrid settings ..."
		mhwd-gpu --setgl mesa
	fi
	post_install
}


post_remove() {
	mhwd-gpu --check
}
